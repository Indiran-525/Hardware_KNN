import time
import math
import statistics

dataset = []

# Class 0: Center roughly (34, 16)
for i in range(16):
    dataset.append({'x': 34 + (i%4), 'y': 16 + (i//4), 'cls': 0})

# Class 1: Center roughly (34, 32)
for i in range(16):
    dataset.append({'x': 34 + (i%4), 'y': 32 + (i//4), 'cls': 1})

# Class 2: Center roughly (18, 16)
for i in range(16):
    dataset.append({'x': 18 + (i%4), 'y': 16 + (i//4), 'cls': 2})

# Class 3: Center roughly (100, 80) - The "Far Away" cluster
for i in range(16):
    dataset.append({'x': 100 + (i%4), 'y': 80 + (i//4), 'cls': 3})


# --- 2. The Hardware Logic Simulation ---
def hardware_knn(input_x, input_y, k_val):
    distances = []
    
    # STEP 1: Distance Calculation 
    for point in dataset:
        dx = int(input_x) - point['x']
        dy = int(input_y) - point['y']
        
        #using square eucledian distance.
        dist_sq = (dx * dx) + (dy * dy)
        distances.append({'d': dist_sq, 'c': point['cls']})

    # STEP 2: Sorting 
    distances.sort(key=lambda x: x['d'])
    
    # STEP 3: Voting (The Voter Module)
    top_k = distances[:k_val]
    votes = {0:0, 1:0, 2:0, 3:0}
    
    for neighbor in top_k:
        votes[neighbor['c']] += 1
        
    winner = max(votes, key=votes.get)
    return winner

# --- 3. Performance Measurement ---
# running 10,000 inferences to get a good average time measurement.

TEST_X = 98
TEST_Y = 33
K_MODE = 5
ITERATIONS = 10000

print(f"--- STARTING SIMULATION ({ITERATIONS} runs) ---")

start_time = time.perf_counter_ns() # Nanosecond precision

for _ in range(ITERATIONS):
    result = hardware_knn(TEST_X, TEST_Y, K_MODE)

end_time = time.perf_counter_ns()

# --- 4. The Results ---
total_ns = end_time - start_time
avg_ns = total_ns / ITERATIONS

print(f"Predicted Class: {result}")
print(f"--------------------------------------------------")
print(f"Average Inference Time on Google Collab: {avg_ns:.2f} ns")
